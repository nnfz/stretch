{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stretch",
  "version": "2.0.2",
  "identifier": "com.nnfz.stretch",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev:vite",
    "beforeBuildCommand": "npm run build:vite"
  },
  "app": {
    "windows": [
      {
        "title": "Stretch",
        "width": 1280,
        "height": 800,
        "minWidth": 670,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "resizable": true,
        "center": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "displayLanguageSelector": false,
        "languages": [
          "Russian",
          "English"
        ]
      }
    }
  }
}
